<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingEnd="20dp"
    android:paddingStart="20dp"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/defaultCardBackgroundColor">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/history_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/defaultColorGreen"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/defaultTextColorWhite"
                android:textAlignment="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/history_card_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/history_card_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/historyCardTextColor"
                android:textAlignment="center"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="@string/history_card_subtitle"
                app:layout_constraintTop_toBottomOf="@id/history_card_title"/>

            <TextView
                android:id="@+id/history_card_content"
                android:gravity="center"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/circle"
                android:textSize="25sp"
                android:textColor="@color/redTextColor"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="@string/history_card_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/history_card_subtitle"/>

            <TextView
                android:id="@+id/history_card_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/historyCardTextColor"
                android:textAlignment="center"
                android:padding="10dp"
                android:text="@string/history_card_date"
                app:layout_constraintTop_toBottomOf="@id/history_card_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>