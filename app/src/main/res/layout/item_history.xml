<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="7.5dp"
    android:paddingEnd="15dp"
    android:paddingTop="15dp"
    android:paddingBottom="7.5dp">

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/historyItemBackground"
        app:cardCornerRadius="30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/history_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:textAllCaps="true"
                android:textSize="22sp"
                android:textColor="@color/historyCardTextColor"
                android:textAlignment="center"
                android:padding="4.5dp"
                android:text="@string/history_card_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/history_card_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/historyCardTextColor"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="@string/history_card_subtitle"
                app:layout_constraintTop_toBottomOf="@id/history_card_title"/>

            <TextView
                android:id="@+id/history_card_content"
                android:gravity="center"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/circle"
                android:textSize="22sp"
                android:textColor="@color/historyCardTextColor"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="@string/history_card_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/history_card_subtitle"/>

            <TextView
                android:id="@+id/history_card_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/historyCardTextColor"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="@string/history_card_date"
                app:layout_constraintTop_toBottomOf="@id/history_card_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>