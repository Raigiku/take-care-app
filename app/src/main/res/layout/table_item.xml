<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/quote_table_date"
        android:background="@color/defaultCardBackgroundColor"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/defaultTextColor"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/quote_table_time"
        android:background="@color/defaultCardBackgroundColor"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/defaultTextColor"
        android:padding="5dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/quote_table_doctor"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@color/defaultCardBackgroundColor"
        android:padding="5dp"
        android:textColor="@color/defaultTextColor"
        android:textSize="12sp" />

    <RelativeLayout
        android:background="@color/defaultCardBackgroundColor"
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="100dp"
        android:layout_height="40dp">

        <Button
            android:id="@+id/quote_table_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:textColor="@color/defaultTextColorWhite"
            android:background="@drawable/button_enabled"/>
    </RelativeLayout>
</LinearLayout>