<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.advice.SoundsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_information"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextAppearance="@style/ToolbarLargeTitleStyle"
        app:titleTextColor="@color/toolbarTittleColor"
        app:title="@string/sounds_title"
        android:background="@color/toolbarDefaultColor">
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="15dp">

            <LinearLayout
                android:id="@+id/sounds_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sounds_image"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/tc_logo_icon" />

                <TextView
                    android:id="@+id/text_sounds_hello"
                    android:background="@drawable/input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="70dp"
                    android:gravity="start|center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:text="@string/sounds_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sound_1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_enabled">

                <ImageView
                    android:id="@+id/sound_1_icon"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_play_circle_solid" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/defaultTextColorWhite"
                    android:background="@drawable/input"
                    android:layout_margin="3dp"
                    android:text="@string/sound_1_text"
                    android:textSize="18sp"
                    android:textColor="@color/defaultTextColorBlue"
                    android:textAllCaps="false"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sound_2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_enabled">

                <ImageView
                    android:id="@+id/sound_2_icon"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_play_circle_solid" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/defaultTextColorWhite"
                    android:background="@drawable/input"
                    android:layout_margin="3dp"
                    android:text="@string/sound_2_text"
                    android:textSize="18sp"
                    android:textColor="@color/defaultTextColorBlue"
                    android:textAllCaps="false"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sound_3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_enabled">

                <ImageView
                    android:id="@+id/sound_3_icon"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_play_circle_solid" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/defaultTextColorWhite"
                    android:background="@drawable/input"
                    android:layout_margin="3dp"
                    android:text="@string/sound_3_text"
                    android:textSize="18sp"
                    android:textColor="@color/defaultTextColorBlue"
                    android:textAllCaps="false"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sound_4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_enabled">

                <ImageView
                    android:id="@+id/sound_4_icon"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_play_circle_solid" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/defaultTextColorWhite"
                    android:background="@drawable/input"
                    android:layout_margin="3dp"
                    android:text="@string/sound_4_text"
                    android:textSize="18sp"
                    android:textColor="@color/defaultTextColorBlue"
                    android:textAllCaps="false"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sound_5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_enabled">

                <ImageView
                    android:id="@+id/sound_5_icon"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_play_circle_solid"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/defaultTextColorWhite"
                    android:background="@drawable/input"
                    android:layout_margin="3dp"
                    android:text="@string/sound_5_text"
                    android:textSize="18sp"
                    android:textColor="@color/defaultTextColorBlue"
                    android:textAllCaps="false"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>