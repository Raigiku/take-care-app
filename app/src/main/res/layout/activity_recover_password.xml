<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.login.RecoverPasswordActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/recover_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="110dp"
        android:background="@color/loginToolbar"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/recover_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_caps"
            android:layout_gravity="center"
            android:textColor="@color/defaultTextColorWhite"
            android:textStyle="bold"
            android:textSize="40sp"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/recover_sub_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:paddingTop="10dp"
        android:background="@color/colorPrimary"
        app:title="@string/recover_title"
        app:titleTextColor="@color/defaultTextColor"
        app:titleTextAppearance="@style/ToolbarTitleStyleNoCaps"
        app:layout_constraintTop_toBottomOf="@id/recover_toolbar"
        app:layout_constraintStart_toStartOf="parent">

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/control_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/recover_sub_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:textColor="@color/controlTextColor"
        android:text="@string/recover_text"/>

    <EditText
        android:id="@+id/recover_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:drawableStart="@drawable/ic_mail_black_24dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:inputType="textEmailAddress"
        android:hint="@string/recover_mail_hint"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/control_title"
        android:background="@drawable/rounded_rectangle"/>

    <Button
        android:id="@+id/recover_btn"
        android:background="@drawable/button_enabled"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:textColor="@color/defaultTextColorWhite"
        android:text="@string/recover_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recover_email"/>

    <ProgressBar
        android:id="@+id/recover_password_progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:indeterminate="true"
        android:progress="100"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recover_email" />

    <TextView
        android:id="@+id/recover_password_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/recover_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/redTextColor"/>

</androidx.constraintlayout.widget.ConstraintLayout>