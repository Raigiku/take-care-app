<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.history.HistoryFragment"
    android:background="@color/colorPrimary">

    <TextView
        android:background="@drawable/ic_chat_bubble_black_24dp"
        android:id="@+id/text_history_hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAlignment="textStart"
        android:padding="15dp"
        android:paddingStart="45dp"
        android:paddingEnd="45dp"
        android:text="@string/history_default_hello"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/history_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_history_hello">

        <TextView
            android:id="@+id/text_history_from"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textColor="@color/historyTextColor"
            android:text="@string/history_date_from"/>

        <EditText
            android:id="@+id/history_date_from"
            android:textAlignment="center"
            android:inputType="date"
            android:layout_weight="0.8"
            android:padding="8dp"
            android:background="@drawable/rounded_rectangle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:cursorVisible="false"
            android:hint="@string/history_date_hint" />

        <ImageView
            android:id="@+id/history_date_picker_from"
            android:layout_marginStart="5dp"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_calendar_24dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/history_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/history_from">

        <TextView
            android:id="@+id/text_history_to"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textColor="@color/historyTextColor"
            android:layout_weight="0.1"
            android:text="@string/history_date_to"/>

        <EditText
            android:id="@+id/history_date_to"
            android:textAlignment="center"
            android:inputType="date"
            android:layout_weight="0.8"
            android:padding="8dp"
            android:background="@drawable/rounded_rectangle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:cursorVisible="false"
            android:hint="@string/history_date_hint" />

        <ImageView
            android:id="@+id/history_date_picker_to"
            android:layout_marginStart="5dp"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_calendar_24dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/clear_filter_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_enabled"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="@string/history_clear_filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/history_to"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/history_reclycler_view"
        tools:listitem="@layout/item_history"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/clear_filter_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ProgressBar
        android:id="@+id/history_progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:indeterminate="true"
        android:progress="100"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/history_to" />

    <TextView
        android:id="@+id/history_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/history_to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text=""
        android:visibility="invisible"
        android:textStyle="bold"
        android:textColor="@color/redTextColor"/>

</androidx.constraintlayout.widget.ConstraintLayout>