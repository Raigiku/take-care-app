<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.history.HistoryFragment"
    android:background="@color/colorPrimary">

    <TextView
        android:background="@drawable/ic_chat_bubble_black_24dp"
        android:id="@+id/text_history_hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAlignment="textStart"
        android:padding="15dp"
        android:paddingStart="45dp"
        android:paddingEnd="45dp"
        android:text="@string/history_default_hello"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginStart="20dp"
        android:id="@+id/text_history_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_history_hello"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/history_date_from"/>


    <LinearLayout
        android:id="@+id/history_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_history_from">

        <EditText
            android:id="@+id/history_date_from"
            android:textAlignment="center"
            android:inputType="date"
            android:layout_weight="0.9"
            android:padding="8dp"
            android:background="@drawable/rounded_rectangle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:hint="@string/history_date_hint" />

        <ImageView
            android:id="@+id/history_date_picker_from"
            android:layout_marginStart="5dp"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_calendar_24dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_history_to"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/history_from"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/history_date_to"/>

    <LinearLayout
        android:id="@+id/history_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_history_to">

        <EditText
            android:id="@+id/history_date_to"
            android:textAlignment="center"
            android:inputType="date"
            android:layout_weight="0.9"
            android:padding="8dp"
            android:background="@drawable/rounded_rectangle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:hint="@string/history_date_hint" />

        <ImageView
            android:id="@+id/history_date_picker_to"
            android:layout_marginStart="5dp"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_calendar_24dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/history_reclycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/history_to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>